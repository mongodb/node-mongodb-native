{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "declaration": true,
    "importHelpers": false,
    "alwaysStrict": true,
    "target": "ES2018",
    "module": "commonJS",
    "moduleResolution": "node",
    "lib": ["ES2018"],
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "lib",
    "importsNotUsedAsValues": "error",
    "inlineSourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"]
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": ["src/**/*"]
}
