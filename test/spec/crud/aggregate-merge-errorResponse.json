{
  "description": "aggregate-merge-errorResponse",
  "schemaVersion": "1.12",
  "createEntities": [
    {
      "client": {
        "id": "client0"
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "crud-tests"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "test"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "test",
      "databaseName": "crud-tests",
      "documents": [
        {
          "_id": 1,
          "x": 1
        },
        {
          "_id": 2,
          "x": 1
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "aggregate $merge DuplicateKey error is accessible",
      "runOnRequirements": [
        {
          "minServerVersion": "5.1",
          "topologies": [
            "single",
            "replicaset"
          ]
        }
      ],
      "operations": [
        {
          "name": "aggregate",
          "object": "database0",
          "arguments": {
            "pipeline": [
              {
                "$documents": [
                  {
                    "_id": 2,
                    "x": 1
                  }
                ]
              },
              {
                "$merge": {
                  "into": "test",
                  "whenMatched": "fail"
                }
              }
            ]
          },
          "expectError": {
            "errorCode": 11000,
            "errorResponse": {
              "keyPattern": {
                "_id": 1
              },
              "keyValue": {
                "_id": 2
              }
            }
          }
        }
      ]
    }
  ]
}
