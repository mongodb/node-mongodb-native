{
  "description": "find-let",
  "schemaVersion": "1.0",
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "observeEvents": [
          "commandStartedEvent"
        ]
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "crud-tests"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "coll0"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "coll0",
      "databaseName": "crud-tests",
      "documents": [
        {
          "_id": 1
        },
        {
          "_id": 2
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "Find with let option",
      "runOnRequirements": [
        {
          "minServerVersion": "5.0"
        }
      ],
      "operations": [
        {
          "name": "find",
          "object": "collection0",
          "arguments": {
            "filter": {
              "$expr": {
                "$eq": [
                  "$_id",
                  "$$id"
                ]
              }
            },
            "let": {
              "id": 1
            }
          },
          "expectResult": [
            {
              "_id": 1
            }
          ]
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "find": "coll0",
                  "filter": {
                    "$expr": {
                      "$eq": [
                        "$_id",
                        "$$id"
                      ]
                    }
                  },
                  "let": {
                    "id": 1
                  }
                }
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Find with let option unsupported (server-side error)",
      "runOnRequirements": [
        {
          "minServerVersion": "3.6.0",
          "maxServerVersion": "4.4.99"
        }
      ],
      "operations": [
        {
          "name": "find",
          "object": "collection0",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "let": {
              "x": 1
            }
          },
          "expectError": {
            "errorContains": "Unrecognized field 'let'",
            "isClientError": false
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "find": "coll0",
                  "filter": {
                    "_id": 1
                  },
                  "let": {
                    "x": 1
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
