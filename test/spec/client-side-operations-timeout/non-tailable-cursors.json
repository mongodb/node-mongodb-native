    {
      "description": "aggregate with $out errors if timeoutMode is iteration",
      "operations": [
        {
          "name": "aggregate",
          "object": "collection",
          "arguments": {
            "pipeline": [
              {
                "$out": "aggregateOutputColl"
              }
            ],
            "timeoutMS": 100,
            "timeoutMode": "iteration"
          },
          "expectError": {
            "isClientError": true
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client",
          "events": []
        }
      ]
    },
    {
