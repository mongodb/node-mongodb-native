          "name": "insertOne",
          "object": "collection0",
          "arguments": {
            "document": {
              "_id": 3,
              "x": 33
            }
          },
          "expectResult": {
            "$$unsetOrMatches": {
              "insertedId": {
                "$$unsetOrMatches": 3
              }
            }
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "insert": "coll",
                  "documents": [
