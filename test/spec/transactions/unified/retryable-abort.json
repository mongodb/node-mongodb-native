              },
              "data": {
                "failCommands": [
                  "abortTransaction"
                ],
                "writeConcernError": {
                  "code": 11601,
                  "errmsg": "operation was interrupted"
                }
              }
            }
          }
        },
        {
          "object": "session0",
          "name": "startTransaction",
          "arguments": {
            "writeConcern": {
              "w": "majority"
            }
          }
        },
        {
          "object": "collection0",
