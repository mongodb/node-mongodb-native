          "object": "session0",
          "arguments": {
            "callback": [
              {
                "name": "insertOne",
                "object": "collection0",
                "arguments": {
                  "session": "session0",
                  "document": {
                    "_id": 1
                  }
                },
                "expectResult": {
                  "$$unsetOrMatches": {
                    "insertedId": {
                      "$$unsetOrMatches": 1
                    }
                  }
                }
              }
            ],
            "writeConcern": {
              "w": 2,
