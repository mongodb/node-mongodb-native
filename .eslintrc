{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:jsdoc/recommended"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "prettier",
    "jsdoc"
  ],
  "rules": {
    "prettier/prettier": "error",

    "no-console": 0,
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "strict": ["error", "global"]
  },
  "settings": {
    "jsdoc": {
      "check-types": false,
      "mode": "typescript"
    }
  }
}
