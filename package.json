{
  "name": "mongodb",
  "version": "4.0.0",
  "description": "The official MongoDB driver for Node.js",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "etc/prepare.js",
    "mongodb.d.ts",
    "mongodb.ts34.d.ts"
  ],
  "types": "mongodb.d.ts",
  "typesVersions": {
    "<=4.0.2": {
      "mongodb.d.ts": [
        "mongodb.ts34.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mongodb/node-mongodb-native.git"
  },
  "keywords": [
    "mongodb",
    "driver",
    "official"
  ],
  "author": {
    "name": "The MongoDB NodeJS Team",
    "email": "dbx-node@mongodb.com"
  },
  "peerOptionalDependencies": {
    "kerberos": "^1.1.0",
    "mongodb-client-encryption": "^1.0.0",
    "snappy": "^6.1.1",
    "bson-ext": "^2.0.0"
  },
  "dependencies": {
    "bson": "^4.4.0",
    "denque": "^1.5.0",
    "mongodb-connection-string-url": "^1.0.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-extractor": "^7.16.1",
    "@microsoft/tsdoc-config": "^0.15.2",
    "@types/aws4": "^1.5.1",
    "@types/chai": "^4.2.14",
    "@types/chai-subset": "^1.3.3",
    "@types/kerberos": "^1.1.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^15.3.1",
    "@types/saslprep": "^1.0.0",
    "@types/semver": "^7.3.4",
    "@types/whatwg-url": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "chalk": "^4.1.0",
    "co": "4.6.0",
    "coveralls": "^3.0.11",
    "downlevel-dts": "^0.7.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-tsdoc": "^0.2.14",
    "js-yaml": "^3.14.0",
    "jsdoc": "^3.6.4",
    "lodash.camelcase": "^4.3.0",
    "madge": "^4.0.2",
    "mocha": "^7.1.1",
    "mocha-sinon": "^2.1.0",
    "mongodb-mock-server": "^2.0.1",
    "nyc": "^15.1.0",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "semver": "^5.5.0",
    "sinon": "^4.3.0",
    "sinon-chai": "^3.2.0",
    "snappy": "^6.3.0",
    "source-map-support": "^0.5.19",
    "standard-version": "^9.3.0",
    "through2": "^3.0.1",
    "ts-node": "^10.0.0",
    "tsd": "^0.17.0",
    "typedoc": "^0.21.0",
